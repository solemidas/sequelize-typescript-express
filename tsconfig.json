{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es6", "dom" ],
    "moduleResolution": "node",
    "outDir": "./.dist",
    "rootDir": "./src",
    "baseUrl": ".", // enables you to import relative to this folder
    "paths": {
      "gql/*": ["src/graphql/*"],
      "db/*": ["src/db/*"]
    },
    "sourceMap": false,
    "allowJs": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [ "node_modules", "build", "webpack" ]
}